{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"  // Ensure integrated terminal is used for Python debugging
        },
        {
            "name": "Launch Chrome against localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",  // Ensure your web app is running on this URL
            "webRoot": "${workspaceFolder}"  // Ensure this points to the root directory of your web project
        }
    ]
}